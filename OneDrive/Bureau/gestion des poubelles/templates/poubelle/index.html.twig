{% extends 'BackBase.html.twig' %}

{% block title %}Liste des poubelles{% endblock %}

{% block stylesheets %}
<style>
    .statut-badge {
        padding: 6px 10px;
        border-radius: 4px;
        font-weight: 600;
        font-size: 0.8rem;
    }
    .statut-Fonctionnelle {
        background-color: #d4edda;
        color: #155724;
    }
    .statut-En-maintenance {
        background-color: #fff3cd;
        color: #856404;
    }
    .statut-Hors-service {
        background-color: #f8d7da;
        color: #721c24;
    }
    .fill-level {
        width: 100%;
        height: 10px;
        background-color: #eee;
        border-radius: 5px;
        margin-top: 5px;
    }
    .fill-bar {
        height: 100%;
        border-radius: 5px;
    }
    .fill-low {
        background-color: #28a745;
    }
    .fill-medium {
        background-color: #ffc107;
    }
    .fill-high {
        background-color: #dc3545;
    }
    .action-buttons {
        display: flex;
        gap: 5px;
    }
</style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-trash"></i> Liste des poubelles
                        </h3>
                        <div class="card-tools">
                            <a href="{{ path('app_poubelle_new') }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Ajouter une poubelle
                            </a>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Localisation</th>
                                    <th>Type</th>
                                    <th>Niveau de remplissage</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for poubelle in poubelles %}
                                <tr>
                                    <td>{{ poubelle.id }}</td>
                                    <td>{{ poubelle.localisation }}</td>
                                    <td>{{ poubelle.type }}</td>
                                    <td>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar 
                                                {% if poubelle.niveauRemplissage < 50 %}
                                                    bg-success
                                                {% elseif poubelle.niveauRemplissage < 80 %}
                                                    bg-warning
                                                {% else %}
                                                    bg-danger
                                                {% endif %}" 
                                                role="progressbar" 
                                                aria-valuenow="{{ poubelle.niveauRemplissage }}" 
                                                aria-valuemin="0" 
                                                aria-valuemax="100" 
                                                style="width: {{ poubelle.niveauRemplissage }}%">
                                            </div>
                                        </div>
                                        <small>{{ poubelle.niveauRemplissage }}%</small>
                                    </td>
                                    <td>
                                        <span class="badge 
                                            {% if poubelle.statut == 'Fonctionnelle' %}
                                                bg-success
                                            {% elseif poubelle.statut == 'En maintenance' %}
                                                bg-warning
                                            {% else %}
                                                bg-danger
                                            {% endif %}">
                                            {{ poubelle.statut }}
                                        </span>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_poubelle_show', {'id': poubelle.id}) }}" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_poubelle_edit', {'id': poubelle.id}) }}" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">Aucune poubelle trouv√©e</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 