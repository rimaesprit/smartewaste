<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="699.0" prefWidth="895.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.AjouterPoubelleController">

    <!-- Titre -->
    <Text layoutX="300" layoutY="50" styleClass="title-text" text="🗑️ Ajouter une Poubelle" />

    <!-- Formulaire -->
    <Label layoutX="220.0" layoutY="160.0" styleClass="form-label" text="📍 Localisation :" />
    <TextField fx:id="TextFieldLocalisation" layoutX="350.0" layoutY="155.0" styleClass="text-field" />

    <Label layoutX="220.0" layoutY="220.0" styleClass="form-label" text="📊 Niveau Remplissage :" />
    <TextField fx:id="TextFieldNiveauRemplissage" layoutX="350.0" layoutY="215.0" styleClass="text-field" />

    <Label layoutX="220.0" layoutY="280.0" styleClass="form-label" text="📄 Statut :" />
    <TextField fx:id="TextFieldStatus" layoutX="350.0" layoutY="275.0" styleClass="text-field" />

    <!-- Boutons -->
    <Button layoutX="200.0" layoutY="420.0" onAction="#ButtonActionAjouter" styleClass="button" text="➕ Ajouter Poubelle" />
    <Button layoutX="500.0" layoutY="420.0" onAction="#ButtonActionRetourMenu" styleClass="button-exit" text="🔙 Retour " />
</AnchorPane>
