<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="920.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.DetailsPoubelleController">

    <!-- Titre principal -->
    <Text layoutX="280" layoutY="50" styleClass="title-text" text="🗑️ Détails de la Poubelle" />

    <!-- Formulaire des détails -->
    <Label layoutX="200.0" layoutY="100.0" styleClass="form-label" text="🔢 ID :" />
    <TextField fx:id="ResultatId" editable="false" layoutX="380.0" layoutY="95.0" styleClass="text-field" />

    <Label layoutX="200.0" layoutY="160.0" styleClass="form-label" text="📍 Localisation :" />
    <TextField fx:id="ResultatLocalisation" layoutX="380.0" layoutY="155.0" styleClass="text-field" />

    <Label layoutX="200.0" layoutY="220.0" styleClass="form-label" text="📊 Niveau Remplissage :" />
    <TextField fx:id="ResultatNiveauRemplissage" layoutX="380.0" layoutY="215.0" styleClass="text-field" />

    <Label layoutX="200.0" layoutY="280.0" styleClass="form-label" text="📄 Statut :" />
    <TextField fx:id="ResultatStatus" layoutX="380.0" layoutY="275.0" styleClass="text-field" />



    <Button fx:id="btnMettreAJour" layoutX="162.0" layoutY="428.0" onAction="#mettreAJourStatus" styleClass="button" text="🔄 Mettre à Jour" />

    <Button fx:id="btnSupprimer" layoutX="414.0" layoutY="428.0" onAction="#supprimerPoubelle" styleClass="button-danger" text="🗑️ Supprimer" />

    <Button fx:id="btnRetour" layoutX="663.0" layoutY="428.0" onAction="#retourListePoubelles" styleClass="button-exit" text="🔙 Retour" />

</AnchorPane>
