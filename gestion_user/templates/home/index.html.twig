{% extends 'BackBase.html.twig' %}

{% block title %}Gestion des Utilisateurs - Accueil{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 mb-3">Système de Gestion des Utilisateurs</h1>
            <p class="lead">Bienvenue dans votre espace personnel</p>
        </div>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Tableau de bord</h3>
                </div>
                <div class="card-body">
                    <p class="lead">Bonjour <strong>{{ app.user.fullName }}</strong>, bienvenue dans votre espace personnel.</p>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-circle text-primary" style="font-size: 3rem;"></i>
                                    <h4 class="mt-3">Mon profil</h4>
                                    <p class="text-muted">Gérez vos informations personnelles</p>
                                    <a href="#" class="btn btn-outline-primary">Accéder</a>
                                </div>
                            </div>
                        </div>
                        
                        {% if is_granted('ROLE_ADMIN') %}
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-body text-center">
                                    <i class="fas fa-users-cog text-danger" style="font-size: 3rem;"></i>
                                    <h4 class="mt-3">Administration</h4>
                                    <p class="text-muted">Gérez les utilisateurs et les rôles</p>
                                    <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-danger">Accéder</a>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 