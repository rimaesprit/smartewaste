{% extends 'BackBase.html.twig' %}

{% block title %}Modifier un Déchet{% endblock %}

{% block body %}
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
        <div>
            <h3 class="fw-bold mb-3">Gestion des Déchets</h3>
            <h6 class="op-7 mb-2">Modifier le déchet</h6>
        </div>
        <div class="ms-md-auto py-2 py-md-0">
            <a href="{{ path('app_dechet_index') }}" class="btn btn-info btn-round">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-title">Mettre à jour Déchet</div>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    
                    <div class="form-group mb-3">
                        {{ form_label(form.type_dechet) }}
                        {{ form_widget(form.type_dechet) }}
                        {{ form_errors(form.type_dechet) }}
                    </div>
                    
                    <div class="form-group mb-3">
                        {{ form_label(form.poids) }}
                        {{ form_widget(form.poids) }}
                        {{ form_errors(form.poids) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.date_depot) }}
                        {{ form_widget(form.date_depot) }}
                        {{ form_errors(form.date_depot) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.camion) }}
                        {{ form_widget(form.camion) }}
                        {{ form_errors(form.camion) }}
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-round">
                            <i class="fas fa-save"></i> Mettre à jour
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        {{ include('dechet/_delete_form.html.twig') }}
    </div>
{% endblock %} 