{% extends 'BackBase.html.twig' %}

{% block title %}Modifier un Camion{% endblock %}

{% block body %}
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
        <div>
            <h3 class="fw-bold mb-3">Gestion des Camions</h3>
            <h6 class="op-7 mb-2">Modifier le camion</h6>
        </div>
        <div class="ms-md-auto py-2 py-md-0">
            <a href="{{ path('app_camion_index') }}" class="btn btn-info btn-round">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-title">Mettre à jour Camion</div>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.matricule, 'Matricule') }}
                                {{ form_widget(form.matricule, {'attr': {'class': 'form-control', 'placeholder': 'ex: TN-0000'}}) }}
                                {{ form_errors(form.matricule) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.capacite, 'Capacité') }}
                                {{ form_widget(form.capacite, {'attr': {'class': 'form-control', 'placeholder': 'en tonnes'}}) }}
                                {{ form_errors(form.capacite) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.etat, 'État') }}
                                {{ form_widget(form.etat, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.etat) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.type_moteur, 'Type moteur') }}
                                {{ form_widget(form.type_moteur, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.type_moteur) }}
                            </div>
                        </div>
                    </div>

                    <h4 class="mt-4 mb-3">Informations environnementales</h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.emission_co2, 'Émission CO2') }}
                                {{ form_widget(form.emission_co2, {'attr': {'class': 'form-control', 'placeholder': 'g/km'}}) }}
                                {{ form_errors(form.emission_co2) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.consommation, 'Consommation') }}
                                {{ form_widget(form.consommation, {'attr': {'class': 'form-control', 'placeholder': 'L/100km'}}) }}
                                {{ form_errors(form.consommation) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.annee_fabrication, 'Année fabrication') }}
                                {{ form_widget(form.annee_fabrication, {'attr': {'class': 'form-control', 'placeholder': 'ex: 2000'}}) }}
                                {{ form_errors(form.annee_fabrication) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.kilometrage, 'Kilométrage') }}
                                {{ form_widget(form.kilometrage, {'attr': {'class': 'form-control', 'placeholder': 'km'}}) }}
                                {{ form_errors(form.kilometrage) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.modele, 'Modèle') }}
                                {{ form_widget(form.modele, {'attr': {'class': 'form-control', 'placeholder': 'ex: BMW 1995'}}) }}
                                {{ form_errors(form.modele) }}
                            </div>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between">
                        <a href="{{ path('app_camion_index') }}" class="btn btn-outline-success">
                            <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                        </a>
                        <div>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Enregistrer
                            </button>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        {{ include('camion/_delete_form.html.twig') }}
    </div>
{% endblock %} 