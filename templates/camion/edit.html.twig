{% extends 'BackBase.html.twig' %}

{% block title %}Modifier un Camion{% endblock %}

{% block body %}
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
        <div>
            <h3 class="fw-bold mb-3">Gestion des Camions</h3>
            <h6 class="op-7 mb-2">Modifier le camion</h6>
        </div>
        <div class="ms-md-auto py-2 py-md-0">
            <a href="{{ path('app_camion_index') }}" class="btn btn-info btn-round">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-title">Mettre à jour Camion</div>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.matricule) }}
                                {{ form_widget(form.matricule) }}
                                {{ form_errors(form.matricule) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.capacite) }}
                                {{ form_widget(form.capacite) }}
                                {{ form_errors(form.capacite) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.etat) }}
                                {{ form_widget(form.etat) }}
                                {{ form_errors(form.etat) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.type_moteur) }}
                                {{ form_widget(form.type_moteur) }}
                                {{ form_errors(form.type_moteur) }}
                            </div>
                        </div>
                    </div>

                    <h4 class="mt-4 mb-3">Informations environnementales</h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.emission_co2) }}
                                {{ form_widget(form.emission_co2) }}
                                {{ form_errors(form.emission_co2) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.consommation) }}
                                {{ form_widget(form.consommation) }}
                                {{ form_errors(form.consommation) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.annee_fabrication) }}
                                {{ form_widget(form.annee_fabrication) }}
                                {{ form_errors(form.annee_fabrication) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.kilometrage) }}
                                {{ form_widget(form.kilometrage) }}
                                {{ form_errors(form.kilometrage) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-round">
                            <i class="fas fa-save"></i> Mettre à jour Camion
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        {{ include('camion/_delete_form.html.twig') }}
    </div>
{% endblock %} 