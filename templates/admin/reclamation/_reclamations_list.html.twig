{% if reclamations is empty %}
    <tr>
        <td colspan="6" class="text-center">Aucune réclamation trouvée</td>
    </tr>
{% else %}
    {% for reclamation in reclamations %}
        <tr>
            <td>{{ reclamation.id }}</td>
            <td>{{ reclamation.dateRec|date('d/m/Y H:i') }}</td>
            <td>
                {% if reclamation.user %}
                    {{ reclamation.user.email }}
                {% else %}
                    <em>Anonyme</em>
                {% endif %}
            </td>
            <td>{{ reclamation.typeRec }}</td>
            <td>
                {% if reclamation.etatRec == 'Pending' %}
                    <span class="badge badge-warning">En attente</span>
                {% elseif reclamation.etatRec == 'In Progress' %}
                    <span class="badge badge-info">En traitement</span>
                {% elseif reclamation.etatRec == 'Resolved' %}
                    <span class="badge badge-success">Résolu</span>
                {% elseif reclamation.etatRec == 'Rejected' %}
                    <span class="badge badge-danger">Rejeté</span>
                {% endif %}
            </td>
            <td>
                <a href="{{ path('app_admin_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-info btn-sm">
                    <i class="fas fa-eye"></i>
                </a>
                <a href="{{ path('app_admin_reclamation_process', {'id': reclamation.id}) }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-cog"></i>
                </a>
                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal{{ reclamation.id }}">
                    <i class="fas fa-trash"></i>
                </button>
                
                <!-- Modal de confirmation de suppression -->
                <div class="modal fade" id="deleteModal{{ reclamation.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel{{ reclamation.id }}" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel{{ reclamation.id }}">Confirmer la suppression</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Êtes-vous sûr de vouloir supprimer cette réclamation ? Cette action est irréversible.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                <form method="post" action="{{ path('app_admin_reclamation_delete', {'id': reclamation.id}) }}" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    {% endfor %}
{% endif %} 