{% extends 'BackBase.html.twig' %}

{% block title %}Détails de la réclamation #{{ reclamation.id }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-2 text-gray-800">Réclamation #{{ reclamation.id }}</h1>
        
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Tableau de bord</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_admin_reclamation_index') }}">Réclamations</a></li>
                <li class="breadcrumb-item active" aria-current="page">Détails #{{ reclamation.id }}</li>
            </ol>
        </nav>

        <!-- Messages flash -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <!-- Informations de la réclamation -->
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Informations de la réclamation</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Actions :</div>
                                <a class="dropdown-item" href="{{ path('app_admin_reclamation_process', {'id': reclamation.id}) }}">
                                    <i class="fas fa-tasks fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Traiter
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#deleteModal">
                                    <i class="fas fa-trash fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Supprimer
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th style="width: 30%">Type</th>
                                        <td>{{ reclamation.typeRec }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date de création</th>
                                        <td>{{ reclamation.dateRec|date('d/m/Y H:i') }}</td>
                                    </tr>
                                    <tr>
                                        <th>Dernière mise à jour</th>
                                        <td>{{ reclamation.updatedAt ? reclamation.updatedAt|date('d/m/Y H:i') : 'Aucune mise à jour' }}</td>
                                    </tr>
                                    <tr>
                                        <th>État</th>
                                        <td>
                                            {% if reclamation.etatRec == 'Pending' %}
                                                <span class="badge badge-warning">En attente</span>
                                            {% elseif reclamation.etatRec == 'In Progress' %}
                                                <span class="badge badge-info">En traitement</span>
                                            {% elseif reclamation.etatRec == 'Resolved' %}
                                                <span class="badge badge-success">Résolu</span>
                                            {% elseif reclamation.etatRec == 'Rejected' %}
                                                <span class="badge badge-danger">Rejeté</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Adresse</th>
                                        <td>{{ reclamation.adresseRec }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ reclamation.reclamation|nl2br }}</td>
                                    </tr>
                                    {% if reclamation.photoRec %}
                                    <tr>
                                        <th>Photo</th>
                                        <td>
                                            <img src="{{ asset('uploads/reclamations/' ~ reclamation.photoRec) }}" alt="Photo de la réclamation" class="img-fluid" style="max-height: 300px;">
                                        </td>
                                    </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informations utilisateur et historique -->
            <div class="col-lg-4">
                <!-- Informations utilisateur -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Informations utilisateur</h6>
                    </div>
                    <div class="card-body">
                        {% if reclamation.user %}
                            <div class="text-center mb-3">
                                <img class="img-profile rounded-circle" src="{{ asset('img/undraw_profile.svg') }}" style="width: 60px; height: 60px;">
                            </div>
                            <div class="text-center mb-3">
                                <h5>{{ reclamation.user.firstName }} {{ reclamation.user.lastName }}</h5>
                                <p class="mb-0">{{ reclamation.user.email }}</p>
                                <p class="mb-0">{{ reclamation.user.phone }}</p>
                            </div>
                            <a href="{{ path('app_admin_user_show', {'id': reclamation.user.id}) }}" class="btn btn-primary btn-block">
                                <i class="fas fa-user mr-1"></i> Voir le profil
                            </a>
                        {% else %}
                            <div class="text-center">
                                <i class="fas fa-user-slash fa-3x mb-3 text-gray-300"></i>
                                <p>Réclamation anonyme ou utilisateur supprimé</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Réponse à la réclamation -->
                {% if reclamation.reponse %}
                <div class="card border-left-primary shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Réponse</h6>
                    </div>
                    <div class="card-body">
                        <p>{{ reclamation.reponse|nl2br }}</p>
                        <small class="text-muted">Répondu le {{ reclamation.updatedAt|date('d/m/Y H:i') }}</small>
                    </div>
                </div>
                {% endif %}
                
                <!-- Note administrative -->
                {% if reclamation.noteInterne %}
                <div class="card border-left-warning shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-warning">Note interne</h6>
                    </div>
                    <div class="card-body">
                        <p>{{ reclamation.noteInterne|nl2br }}</p>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Boutons d'action -->
        <div class="row mb-4">
            <div class="col-md-12">
                <a href="{{ path('app_admin_reclamation_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left mr-1"></i> Retour à la liste
                </a>
                <a href="{{ path('app_admin_reclamation_process', {'id': reclamation.id}) }}" class="btn btn-primary">
                    <i class="fas fa-tasks mr-1"></i> Traiter cette réclamation
                </a>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                    <i class="fas fa-trash mr-1"></i> Supprimer
                </button>
            </div>
        </div>
    </div>

    <!-- Modal de suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer cette réclamation ? Cette action est irréversible.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <form method="post" action="{{ path('app_admin_reclamation_delete', {'id': reclamation.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 