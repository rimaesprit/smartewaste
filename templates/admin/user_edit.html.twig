{% extends 'BackBase.html.twig' %}

{% block title %}Modifier l'utilisateur - SmartWaste{% endblock %}

{% block body %}
<div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
    <div>
        <h3 class="fw-bold mb-3">Modifier l'utilisateur</h3>
        <h6 class="op-7 mb-2">Modifier les informations de {{ user.fullName }}</h6>
    </div>
    <div class="ms-md-auto py-2 py-md-0">
        <a href="{{ path('app_admin_users') }}" class="btn btn-secondary btn-round btn-sm me-2">
            <i class="fas fa-arrow-left"></i> Retour Ã  la liste
        </a>
        <a href="{{ path('app_admin_user_view', {'id': user.id}) }}" class="btn btn-info btn-round btn-sm">
            <i class="fas fa-eye"></i> Voir le profil
        </a>
    </div>
</div>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Modifier les informations</div>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.firstName) }}
                            {{ form_widget(form.firstName) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.lastName) }}
                            {{ form_widget(form.lastName) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">{{ form_label(form.roles) }}</label>
                        <div class="form-check">
                            {% for choice in form.roles %}
                                <div class="mb-2">
                                    {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.roles) }}
                    </div>
                    
                    <div class="mb-3 form-check">
                        {{ form_widget(form.isVerified, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.isVerified, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(form.isVerified) }}
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_admin_users') }}" class="btn btn-secondary">
                            <i class="fa fa-times me-1"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save me-1"></i> Enregistrer les modifications
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %} 