{% extends 'BackBase.html.twig' %}

{% block title %}Administration - SmartWaste{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Dashboard Header -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-5">
            <div class="mb-3 mb-md-0">
                <h1 class="fw-bold mb-2">Tableau de bord administrateur</h1>
                <p class="text-muted mb-0">Bienvenue dans votre espace d'administration SmartWaste</p>
            </div>
            <div class="d-flex flex-column flex-md-row gap-3">
                <div class="input-group input-group-sm rounded-pill" style="max-width: 250px;">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Rechercher...">
                </div>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle rounded-pill" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-filter me-1"></i> Filtrer
                    </button>
                    <ul class="dropdown-menu shadow-sm" aria-labelledby="filterDropdown">
                        <li><h6 class="dropdown-header">Statut de vérification</h6></li>
                        <li><a class="dropdown-item filter-option" href="#" data-filter="verified"><i class="fas fa-check-circle text-success me-2"></i>Vérifiés</a></li>
                        <li><a class="dropdown-item filter-option" href="#" data-filter="unverified"><i class="fas fa-times-circle text-danger me-2"></i>Non vérifiés</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><h6 class="dropdown-header">Rôle utilisateur</h6></li>
                        <li><a class="dropdown-item filter-option" href="#" data-filter="admin"><i class="fas fa-shield-alt text-warning me-2"></i>Administrateurs</a></li>
                        <li><a class="dropdown-item filter-option" href="#" data-filter="user"><i class="fas fa-user text-info me-2"></i>Utilisateurs</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item filter-option" href="#" data-filter="all"><i class="fas fa-bars text-muted me-2"></i>Tous les utilisateurs</a></li>
                    </ul>
                </div>
                <div id="activeFilter" class="d-none align-items-center bg-light rounded-pill px-3 py-1">
                    <span class="small me-2"></span>
                    <button class="btn-close btn-close-sm" aria-label="Remove filter"></button>
                </div>
                <div class="col-md-3 mb-4">
                    <a href="{{ path('admin_stats') }}" class="card text-decoration-none hover-effect">
                        <div class="card-body text-center">
                            <div class="icon-circle bg-primary text-white mb-3">
                                <i class="fas fa-chart-line fa-2x"></i>
                            </div>
                            <h5 class="card-title">Admin Dashboard</h5>
                            <p class="text-muted">View detailed statistics</p>
                        </div>
                    </a>
                </div>


            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Utilisateurs</h6>
                                <h3 class="mb-0" id="totalUsers">{{ users|length }}</h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                                <i class="fas fa-users text-primary"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <span class="text-success small"><i class="fas fa-arrow-up"></i> 12% ce mois</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Vérifiés</h6>
                                <h3 class="mb-0" id="verifiedUsers">{{ users|filter(u => u.isVerified)|length }}</h3>
                            </div>
                            <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                                <i class="fas fa-check-circle text-success"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <span class="text-success small"><i class="fas fa-arrow-up"></i> 8% ce mois</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Administrateurs</h6>
                                <h3 class="mb-0" id="adminUsers">{{ users|filter(u => 'ROLE_ADMIN' in u.roles)|length }}</h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                                <i class="fas fa-shield-alt text-warning"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <span class="text-muted small">Statique</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Activité</h6>
                                <h3 class="mb-0">24h</h3>
                            </div>
                            <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                                <i class="fas fa-chart-line text-info"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <span class="text-danger small"><i class="fas fa-arrow-down"></i> 3% aujourd'hui</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Card -->
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                    <div class="mb-2 mb-md-0">
                        <h5 class="fw-bold mb-0">Liste des utilisateurs</h5>
                        <p class="text-muted small mb-0" id="filterStatus">Affichage de tous les utilisateurs</p>
                    </div>
                    <div class="d-flex">
                        <a href="{{ path('app_admin_users') }}" class="btn btn-sm btn-primary rounded-pill px-3">
                            <i class="fas fa-users me-1"></i> Voir tous
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                        <tr>
                            <th class="ps-4">#</th>
                            <th>Utilisateur</th>
                            <th>Email</th>
                            <th>Rôle</th>
                            <th>Statut</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                        </thead>
                        <tbody id="usersTableBody">
                        {% for user in users %}
                            <tr class="border-top user-row"
                                data-id="{{ user.id }}"
                                data-name="{{ user.fullName|lower }}"
                                data-email="{{ user.email|lower }}"
                                data-role="{{ 'ROLE_ADMIN' in user.roles ? 'admin' : 'user' }}"
                                data-status="{{ user.isVerified ? 'verified' : 'unverified' }}">
                                <td class="ps-4 fw-bold text-muted">{{ user.id }}</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar me-3">
                                            <div class="avatar-initials rounded-circle bg-light text-dark d-flex align-items-center justify-content-center"
                                                 style="width: 36px; height: 36px; background-color: {{ random(['#e3f2fd', '#fff8e1', '#f3e5f5', '#e8f5e9', '#ffebee']) }}!important;">
                                                {{ user.firstName|first|upper }}{{ user.lastName|first|upper }}
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">{{ user.fullName }}</h6>
                                            <small class="text-muted">Inscrit le {{ user.createdAt|date('d/m/Y') }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:{{ user.email }}" class="text-decoration-none">{{ user.email }}</a>
                                </td>
                                <td>
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary">Admin</span>
                                    {% else %}
                                        <span class="badge rounded-pill bg-info bg-opacity-10 text-info">Utilisateur</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if user.isVerified %}
                                        <span class="badge rounded-pill bg-success bg-opacity-10 text-success">
                                                <i class="fas fa-check-circle me-1"></i> Vérifié
                                            </span>
                                    {% else %}
                                        <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger">
                                                <i class="fas fa-times-circle me-1"></i> Non vérifié
                                            </span>
                                    {% endif %}
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_admin_user_view', {'id': user.id}) }}" class="btn btn-outline-secondary rounded-pill me-1" data-bs-toggle="tooltip" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary rounded-pill me-1" data-bs-toggle="tooltip" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal{{ user.id }}" data-bs-toggle="tooltip" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="d-flex flex-column align-items-center justify-content-center">
                                        <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                                        <h5 class="mb-1">Aucun utilisateur enregistré</h5>
                                        <p class="text-muted small">Commencez par ajouter un nouvel utilisateur</p>
                                        <a href="#" class="btn btn-sm btn-primary mt-2 rounded-pill">
                                            <i class="fas fa-plus me-1"></i> Ajouter un utilisateur
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        Affichage de <span id="visibleCount">{{ users|length }}</span> sur {{ users|length }} entrées
                    </div>
                    <div>
                        <a href="{{ path('app_admin_users') }}" class="btn btn-sm btn-outline-primary rounded-pill">
                            Voir plus <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            transition: all 0.3s ease;
        }
        .card:hover {
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.08)!important;
        }
        .avatar-initials {
            font-weight: 600;
            text-transform: uppercase;
        }
        .table tr {
            transition: background-color 0.2s ease;
        }
        .table tr:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }
        .badge {
            padding: 0.35em 0.65em;
            font-weight: 500;
        }
        #activeFilter {
            display: flex;
        }
        .btn-close-sm {
            font-size: 0.5rem;
        }

         .hover-effect:hover {
             transform: translateY(-5px);
             transition: all 0.3s ease;
             box-shadow: 0 4px 20px rgba(0,0,0,0.1);
         }
        .icon-circle {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 60px;
            height: 60px;
            border-radius: 50%;
        }

    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Elements
            const searchInput = document.getElementById('searchInput');
            const filterOptions = document.querySelectorAll('.filter-option');
            const activeFilter = document.getElementById('activeFilter');
            const activeFilterText = activeFilter.querySelector('span');
            const activeFilterClose = activeFilter.querySelector('.btn-close');
            const usersTableBody = document.getElementById('usersTableBody');
            const userRows = document.querySelectorAll('.user-row');
            const filterStatus = document.getElementById('filterStatus');
            const visibleCount = document.getElementById('visibleCount');
            const totalUsers = document.getElementById('totalUsers');
            const verifiedUsers = document.getElementById('verifiedUsers');
            const adminUsers = document.getElementById('adminUsers');

            // Current filter state
            let currentFilter = 'all';
            let currentSearch = '';

            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Search functionality
            searchInput.addEventListener('input', function() {
                currentSearch = this.value.toLowerCase();
                filterUsers();
            });

            // Filter options
            filterOptions.forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();
                    currentFilter = this.dataset.filter;

                    // Update active filter display
                    if (currentFilter === 'all') {
                        activeFilter.classList.add('d-none');
                        filterStatus.textContent = 'Affichage de tous les utilisateurs';
                    } else {
                        activeFilter.classList.remove('d-none');
                        const filterText = this.textContent.trim();
                        activeFilterText.textContent = filterText;
                        filterStatus.textContent = `Filtre appliqué: ${filterText}`;
                    }

                    filterUsers();
                });
            });

            // Clear active filter
            activeFilterClose.addEventListener('click', function() {
                currentFilter = 'all';
                activeFilter.classList.add('d-none');
                filterStatus.textContent = 'Affichage de tous les utilisateurs';
                filterUsers();
            });

            // Main filtering function
            function filterUsers() {
                let visibleRows = 0;

                userRows.forEach(row => {
                    const name = row.dataset.name;
                    const email = row.dataset.email;
                    const role = row.dataset.role;
                    const status = row.dataset.status;

                    // Check search match
                    const searchMatch = currentSearch === '' ||
                        name.includes(currentSearch) ||
                        email.includes(currentSearch);

                    // Check filter match
                    let filterMatch = true;
                    if (currentFilter !== 'all') {
                        if (currentFilter === 'verified' || currentFilter === 'unverified') {
                            filterMatch = status === currentFilter;
                        } else if (currentFilter === 'admin' || currentFilter === 'user') {
                            filterMatch = role === currentFilter;
                        }
                    }

                    // Show/hide row based on matches
                    if (searchMatch && filterMatch) {
                        row.style.display = '';
                        visibleRows++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Update counters
                visibleCount.textContent = visibleRows;

                // Update filter status if only search is active
                if (currentFilter === 'all' && currentSearch !== '') {
                    filterStatus.textContent = `Résultats pour "${currentSearch}"`;
                }
            }

            // Initial filter (in case page loads with parameters)
            filterUsers();
        });
    </script>
{% endblock %}