{% extends 'BackBase.html.twig' %}

{% block title %}Nouvelle réclamation{% endblock %}

{% block body %}
<div class="page-header">
    <h4 class="page-title">Nouvelle réclamation</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('app_home') }}">
                <i class="fas fa-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="fas fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Citoyens</a>
        </li>
        <li class="separator">
            <i class="fas fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a href="{{ path('app_reclamation_index') }}">Réclamations</a>
        </li>
        <li class="separator">
            <i class="fas fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Nouvelle</a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Formulaire de réclamation</h4>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                
                <div class="form-group">
                    {{ form_label(form.typeRec) }}
                    {{ form_widget(form.typeRec) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.typeRec) }}
                    </div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.reclamation) }}
                    {{ form_widget(form.reclamation) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.reclamation) }}
                    </div>
                </div>
                
                <div class="card-action d-flex justify-content-between">
                    <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Enregistrer
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %} 