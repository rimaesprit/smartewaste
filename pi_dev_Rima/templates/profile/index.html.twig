{% extends 'FrontBase.html.twig' %}

{% block title %}Mon Profil - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #1e4b57;
            --primary-light: #2d7d90;
            --primary-gradient: linear-gradient(135deg, #1e4b57 0%, #2d7d90 100%);
            --accent-color: #3ecf8e;
            --dark-color: #1f2937;
            --light-color: #f9fafb;
            --text-color: #374151;
            --text-light: #6b7280;
            --box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --border-radius: 1rem;
        }

        .profile-section {
            margin-bottom: 2rem;
            background-color: var(--light-color);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .profile-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        
        .profile-header {
            background: var(--primary-gradient);
            color: white;
            padding: 3rem 0;
            position: relative;
            overflow: hidden;
        }
        
        .profile-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTAwJSIgaGVpZ2h0PSIxMDAlIiB2aWV3Qm94PSIwIDAgMTI4MCAxNDAiIHByZXNlcnZlQXNwZWN0UmF0aW89Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PGcgZmlsbD0iI2ZmZmZmZiI+PHBhdGggZD0iTTEyODAgMTQwVjBTOTkzLjQ2IDE0MCA2NDAgMTM5IDAgMCAwIDB2MTQweiIvPjwvZz48L3N2Zz4=');
            background-size: 100% 100px;
            background-position: bottom;
            z-index: 1;
            opacity: 0.1;
        }
        
        .profile-header-content {
            position: relative;
            z-index: 2;
        }
        
        .profile-avatar {
            position: relative;
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin: 0 auto 1.5rem;
            border: 5px solid white;
            box-shadow: var(--box-shadow);
            overflow: hidden;
            background-color: #f3f4f6;
        }
        
        .profile-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .profile-avatar-text {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3.5rem;
            font-weight: 700;
            color: white;
        }
        
        .profile-name {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-align: center;
        }
        
        .profile-subtext {
            text-align: center;
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        .profile-stats {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-top: 2rem;
        }
        
        .profile-stat {
            text-align: center;
        }
        
        .profile-stat-value {
            font-size: 1.5rem;
            font-weight: 700;
        }
        
        .profile-stat-label {
            font-size: 0.9rem;
            opacity: 0.8;
        }
        
        .profile-nav {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 1.5rem;
        }
        
        .profile-nav-item {
            padding: 0.75rem 1.5rem;
            border-radius: 2rem;
            font-weight: 600;
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .profile-nav-item:hover {
            background-color: white;
            color: var(--primary-color);
            transform: translateY(-3px);
        }
        
        .profile-section-title {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            margin-bottom: 0;
            font-weight: 700;
            color: var(--dark-color);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .profile-section-title i {
            color: var(--primary-light);
        }
        
        .profile-section-content {
            padding: 1.5rem;
        }
        
        .profile-info-item {
            margin-bottom: 1.25rem;
            display: flex;
            align-items: center;
        }
        
        .profile-info-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: rgba(45, 125, 144, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            color: var(--primary-light);
            flex-shrink: 0;
        }
        
        .profile-info-content {
            flex-grow: 1;
        }
        
        .profile-info-label {
            font-size: 0.8rem;
            color: var(--text-light);
            margin-bottom: 0.25rem;
        }
        
        .profile-info-value {
            font-weight: 600;
            color: var(--text-color);
        }

        .profile-stats-card {
            padding: 1.5rem;
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            height: 100%;
            transition: transform 0.3s ease;
        }
        
        .profile-stats-card:hover {
            transform: translateY(-5px);
        }
        
        .stats-card-title {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--text-color);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .stats-card-title i {
            color: var(--primary-light);
        }
        
        .stats-card-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.25rem;
        }
        
        .stats-card-change {
            font-size: 0.875rem;
            color: var(--accent-color);
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }
        
        .stats-card-change.negative {
            color: #ef4444;
        }
        
        .preferences-toggle {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .preferences-toggle:last-child {
            border-bottom: none;
        }
        
        .toggle-label {
            font-weight: 600;
            color: var(--text-color);
        }
        
        .toggle-desc {
            font-size: 0.875rem;
            color: var(--text-light);
            margin-top: 0.25rem;
        }
        
        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }
        
        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            -webkit-transition: .4s;
            transition: .4s;
            border-radius: 34px;
        }
        
        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            -webkit-transition: .4s;
            transition: .4s;
            border-radius: 50%;
        }
        
        input:checked + .slider {
            background-color: var(--primary-light);
        }
        
        input:focus + .slider {
            box-shadow: 0 0 1px var(--primary-light);
        }
        
        input:checked + .slider:before {
            -webkit-transform: translateX(26px);
            -ms-transform: translateX(26px);
            transform: translateX(26px);
        }
        
        /* Responsive fixes */
        @media (max-width: 768px) {
            .profile-avatar {
                width: 120px;
                height: 120px;
            }
            
            .profile-name {
                font-size: 2rem;
            }
            
            .profile-stats {
                flex-wrap: wrap;
                gap: 1rem;
            }
            
            .profile-nav {
                flex-wrap: wrap;
            }
        }
        
        /* Alert styling */
        .alert {
            border-radius: var(--border-radius);
            margin-bottom: 1.5rem;
            border: none;
            padding: 1rem 1.5rem;
            font-weight: 500;
        }
        
        .alert-success {
            background-color: rgba(16, 185, 129, 0.1);
            color: #065f46;
        }
        
        .alert-danger {
            background-color: rgba(239, 68, 68, 0.1);
            color: #b91c1c;
        }
        
        .alert-info {
            background-color: rgba(59, 130, 246, 0.1);
            color: #1e40af;
        }
        
        .alert-warning {
            background-color: rgba(251, 191, 36, 0.1);
            color: #92400e;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="profile-header">
        <div class="container profile-header-content">
            <div class="profile-avatar">
                {% if user.avatarUrl %}
                    <img src="{{ user.avatarUrl }}" alt="{{ user.fullName }}" />
                {% else %}
                    <div class="profile-avatar-text">{{ user.initials }}</div>
                {% endif %}
            </div>
            <h1 class="profile-name">{{ user.fullName }}</h1>
            <p class="profile-subtext">{{ user.email }}</p>
            
            <div class="profile-stats">
                <div class="profile-stat">
                    <div class="profile-stat-value">{{ user.reclamations|length }}</div>
                    <div class="profile-stat-label">Réclamations</div>
                </div>
                <div class="profile-stat">
                    <div class="profile-stat-value">{{ user.signalements|length }}</div>
                    <div class="profile-stat-label">Signalements</div>
                </div>
                {% if user.lastLogin %}
                    <div class="profile-stat">
                        <div class="profile-stat-value">{{ user.lastLogin|date('d/m/Y') }}</div>
                        <div class="profile-stat-label">Dernière connexion</div>
                    </div>
                {% endif %}
            </div>
            
            <div class="profile-nav">
                <a href="{{ path('app_profile_edit') }}" class="profile-nav-item">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <a href="{{ path('app_profile_change_password') }}" class="profile-nav-item">
                    <i class="fas fa-key"></i> Mot de passe
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin_dashboard') }}" class="profile-nav-item">
                        <i class="fas fa-tachometer-alt"></i> Administration
                    </a>
                {% endif %}
            </div>
        </div>
    </section>
    
    <div class="container mb-5">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="row g-4">
            <div class="col-lg-8">
                <!-- Informations personnelles -->
                <div class="profile-section">
                    <h3 class="profile-section-title"><i class="fas fa-user-circle"></i> Informations personnelles</h3>
                    <div class="profile-section-content">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="profile-info-item">
                                    <div class="profile-info-icon">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="profile-info-content">
                                        <div class="profile-info-label">Prénom</div>
                                        <div class="profile-info-value">{{ user.firstName }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="profile-info-item">
                                    <div class="profile-info-icon">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="profile-info-content">
                                        <div class="profile-info-label">Nom</div>
                                        <div class="profile-info-value">{{ user.lastName }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="profile-info-item">
                            <div class="profile-info-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="profile-info-content">
                                <div class="profile-info-label">Email</div>
                                <div class="profile-info-value">{{ user.email }}</div>
                            </div>
                        </div>
                        
                        {% if user.phoneNumber %}
                            <div class="profile-info-item">
                                <div class="profile-info-icon">
                                    <i class="fas fa-phone"></i>
                                </div>
                                <div class="profile-info-content">
                                    <div class="profile-info-label">Téléphone</div>
                                    <div class="profile-info-value">{{ user.phoneNumber }}</div>
                                </div>
                            </div>
                        {% endif %}
                        
                        {% if user.address or user.city or user.postalCode %}
                            <div class="profile-info-item">
                                <div class="profile-info-icon">
                                    <i class="fas fa-home"></i>
                                </div>
                                <div class="profile-info-content">
                                    <div class="profile-info-label">Adresse</div>
                                    <div class="profile-info-value">
                                        {% if user.address %}{{ user.address }}{% endif %}
                                        {% if user.postalCode or user.city %}
                                            <br>
                                            {% if user.postalCode %}{{ user.postalCode }}{% endif %}
                                            {% if user.city %}{{ user.city }}{% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        
                        {% if user.birthDate %}
                            <div class="profile-info-item">
                                <div class="profile-info-icon">
                                    <i class="fas fa-birthday-cake"></i>
                                </div>
                                <div class="profile-info-content">
                                    <div class="profile-info-label">Date de naissance</div>
                                    <div class="profile-info-value">{{ user.birthDate|date('d/m/Y') }}</div>
                                </div>
                            </div>
                        {% endif %}
                        
                        {% if user.bio %}
                            <div class="profile-info-item">
                                <div class="profile-info-icon">
                                    <i class="fas fa-info-circle"></i>
                                </div>
                                <div class="profile-info-content">
                                    <div class="profile-info-label">Bio</div>
                                    <div class="profile-info-value">{{ user.bio }}</div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                
                <!-- Activité récente -->
                <div class="profile-section mt-4">
                    <h3 class="profile-section-title"><i class="fas fa-history"></i> Activité récente</h3>
                    <div class="profile-section-content">
                        {% if user.reclamations|length > 0 or user.signalements|length > 0 %}
                            <div class="list-group">
                                {% for reclamation in user.reclamations|slice(0, 3) %}
                                    <a href="{{ path('app_front_reclamation_show', {'id': reclamation.id}) }}" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">{{ reclamation.typeRec }}</h5>
                                            <small>{{ reclamation.dateRec|date('d/m/Y') }}</small>
                                        </div>
                                        <p class="mb-1">Réclamation: {{ reclamation.reclamation|slice(0, 100) }}{% if reclamation.reclamation|length > 100 %}...{% endif %}</p>
                                        <small>Status: {{ reclamation.etatRec }}</small>
                                    </a>
                                {% endfor %}
                                
                                {% for signalement in user.signalements|slice(0, 3) %}
                                    <a href="{{ path('app_signalement_show', {'id': signalement.id}) }}" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">{{ signalement.title }}</h5>
                                            <small>{{ signalement.createdAt|date('d/m/Y') }}</small>
                                        </div>
                                        <p class="mb-1">Signalement: {{ signalement.description|slice(0, 100) }}{% if signalement.description|length > 100 %}...{% endif %}</p>
                                        <small>Type: {{ signalement.type }}</small>
                                    </a>
                                {% endfor %}
                            </div>
                            
                            {% if user.reclamations|length > 3 or user.signalements|length > 3 %}
                                <div class="text-center mt-3">
                                    <a href="{{ path('app_front_reclamation_index') }}" class="btn btn-outline-primary">Voir toute mon activité</a>
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="text-center py-4">
                                <img src="{{ asset('images/empty-state.svg') }}" alt="Aucune activité" style="width: 150px; height: auto; opacity: 0.5;">
                                <p class="mt-3 text-muted">Vous n'avez pas encore d'activité.</p>
                                <a href="{{ path('app_front_reclamation_new') }}" class="btn btn-outline-primary mt-2">Créer une réclamation</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <!-- Préférences -->
                <div class="profile-section">
                    <h3 class="profile-section-title"><i class="fas fa-cog"></i> Préférences</h3>
                    <div class="profile-section-content">
                        <form method="post" action="{{ path('app_profile_update_preferences') }}" id="preferences-form">
                            <div class="preferences-toggle">
                                <div>
                                    <div class="toggle-label">Notifications</div>
                                    <div class="toggle-desc">Recevoir des notifications par email</div>
                                </div>
                                <label class="switch">
                                    <input type="hidden" name="notification_enabled" value="0">
                                    <input type="checkbox" name="notification_enabled" value="1" {% if user.getPreference('notifications', true) %}checked{% endif %}>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            
                            <div class="preferences-toggle">
                                <div>
                                    <div class="toggle-label">Newsletter</div>
                                    <div class="toggle-desc">Recevoir notre newsletter</div>
                                </div>
                                <label class="switch">
                                    <input type="hidden" name="newsletter_enabled" value="0">
                                    <input type="checkbox" name="newsletter_enabled" value="1" {% if user.getPreference('newsletter', true) %}checked{% endif %}>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            
                            <div class="preferences-toggle">
                                <div>
                                    <div class="toggle-label">Thème sombre</div>
                                    <div class="toggle-desc">Utiliser le thème sombre</div>
                                </div>
                                <label class="switch">
                                    <input type="hidden" name="theme" value="light">
                                    <input type="checkbox" name="theme" value="dark" {% if user.theme == 'dark' %}checked{% endif %}>
                                    <span class="slider"></span>
                                </label>
                            </div>

                            <div class="text-center mt-3">
                                <button type="submit" class="btn btn-outline-primary">Enregistrer mes préférences</button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Statistiques -->
                <div class="mt-4">
                    <div class="row g-4">
                        <div class="col-6">
                            <div class="profile-stats-card">
                                <div class="stats-card-title">
                                    <i class="fas fa-file-alt"></i> Réclamations
                                </div>
                                <div class="stats-card-value">{{ user.reclamations|length }}</div>
                                <div class="stats-card-change">
                                    <i class="fas fa-arrow-up"></i> +{{ user.reclamations|length > 0 ? ((user.reclamations|length / 10) * 100)|round : 0 }}%
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="profile-stats-card">
                                <div class="stats-card-title">
                                    <i class="fas fa-exclamation-triangle"></i> Signalements
                                </div>
                                <div class="stats-card-value">{{ user.signalements|length }}</div>
                                <div class="stats-card-change">
                                    <i class="fas fa-arrow-up"></i> +{{ user.signalements|length > 0 ? ((user.signalements|length / 5) * 100)|round : 0 }}%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Liens rapides -->
                <div class="profile-section mt-4">
                    <h3 class="profile-section-title"><i class="fas fa-link"></i> Liens rapides</h3>
                    <div class="profile-section-content">
                        <div class="list-group">
                            <a href="{{ path('app_front_reclamation_new') }}" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-plus-circle me-3 text-success"></i> Nouvelle réclamation
                            </a>
                            <a href="{{ path('app_front_reclamation_index') }}" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-list me-3 text-primary"></i> Mes réclamations
                            </a>
                            <a href="{{ path('app_profile_change_password') }}" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-key me-3 text-warning"></i> Changer mon mot de passe
                            </a>
                            <a href="{{ path('app_logout') }}" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-sign-out-alt me-3 text-danger"></i> Déconnexion
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation d'entrée pour les sections du profil
            const sections = document.querySelectorAll('.profile-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    section.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, 100 + (index * 150));
            });
            
            // Génération d'un fond coloré pour l'avatar si pas d'URL d'avatar
            const avatarText = document.querySelector('.profile-avatar-text');
            if (avatarText) {
                const userName = '{{ user.fullName }}';
                const hash = userName.split('').reduce((acc, char) => {
                    return char.charCodeAt(0) + ((acc << 5) - acc);
                }, 0);
                
                const h = Math.abs(hash) % 360;
                avatarText.style.background = `linear-gradient(135deg, hsl(${h}, 70%, 35%) 0%, hsl(${h}, 80%, 50%) 100%)`;
            }
        });
    </script>
{% endblock %} 