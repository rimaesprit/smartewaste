{% extends 'FrontBase.html.twig' %}

{% block title %}Changer mon mot de passe - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .password-header {
            background: linear-gradient(135deg, #1e4b57 0%, #2d7d90 100%);
            color: white;
            padding: 80px 0 40px;
            margin-bottom: 30px;
            position: relative;
        }
        .password-header h1 {
            font-weight: 700;
            margin-bottom: 15px;
        }
        .password-card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            padding: 30px;
            margin-bottom: 30px;
        }
        .password-card h2 {
            color: #1e4b57;
            font-weight: 600;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f0f0f0;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
        }
        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
            padding: 12px;
            font-size: 1rem;
        }
        .form-control:focus {
            border-color: #2d7d90;
            box-shadow: 0 0 0 0.25rem rgba(45, 125, 144, 0.25);
        }
        .btn-submit {
            background-color: #2d7d90;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 25px;
            font-weight: 500;
            transition: all 0.3s;
        }
        .btn-submit:hover {
            background-color: #1e4b57;
            transform: translateY(-2px);
        }
        .btn-cancel {
            background-color: #ffffff;
            color: #6c757d;
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 12px 25px;
            font-weight: 500;
            transition: all 0.3s;
        }
        .btn-cancel:hover {
            background-color: #f8f9fa;
            transform: translateY(-2px);
        }
        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
        }
        .password-info {
            background-color: #e7f5ff;
            border-left: 4px solid #2d7d90;
            padding: 15px;
            margin-bottom: 25px;
            border-radius: 8px;
        }
        .password-info h3 {
            font-size: 1rem;
            margin-bottom: 10px;
            color: #1e4b57;
        }
        .password-info ul {
            padding-left: 20px;
            margin-bottom: 0;
        }
        .password-info li {
            margin-bottom: 5px;
            font-size: 0.9rem;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="password-header">
        <div class="container">
            <h1>Changer mon mot de passe</h1>
            <p class="lead">Sécurisez votre compte avec un nouveau mot de passe</p>
        </div>
    </section>

    <div class="container mb-5">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="password-card">
                    <h2>Formulaire de changement de mot de passe</h2>
                    
                    <div class="password-info">
                        <h3><i class="bi bi-info-circle me-2"></i>Conseils pour un mot de passe fort</h3>
                        <ul>
                            <li>Utilisez au moins 8 caractères</li>
                            <li>Combinez lettres majuscules et minuscules</li>
                            <li>Incluez des chiffres et des caractères spéciaux</li>
                            <li>Évitez les informations personnelles facilement devinables</li>
                        </ul>
                    </div>
                    
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="form-group">
                        {{ form_label(form.oldPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.oldPassword) }}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.oldPassword) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.newPassword.first) }}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.newPassword.first) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.newPassword.second) }}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.newPassword.second) }}
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-submit">
                            <i class="bi bi-shield-lock me-2"></i>Changer mon mot de passe
                        </button>
                        <a href="{{ path('app_profile_index') }}" class="btn btn-cancel">
                            <i class="bi bi-x-circle me-2"></i>Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 