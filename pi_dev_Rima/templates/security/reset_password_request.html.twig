{% extends 'FrontBase.html.twig' %}

{% block title %}Mot de passe oublié - SmartWaste{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-5 justify-content-center">
        <div class="col-lg-5 col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="font-weight-bold text-primary">Réinitialiser votre mot de passe</h2>
                        <p class="text-muted">Entrez votre email pour recevoir un lien de réinitialisation</p>
                    </div>

                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    
                    {% for flash_error in app.flashes('error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">{{ message }}</div>
                    {% endfor %}

                    {{ form_start(requestForm, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_label(requestForm.email) }}
                            {{ form_widget(requestForm.email) }}
                            <div class="invalid-feedback">
                                {{ form_errors(requestForm.email) }}
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-primary btn-lg">Envoyer l'email de réinitialisation</button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="{{ path('app_login') }}" class="text-muted">Retour à la connexion</a>
                        </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 