{% for poubelle in poubelles %}
    <tr>
        <td>{{ poubelle.id }}</td>
        <td>{{ poubelle.localisation }}</td>
        <td>{{ poubelle.type }}</td>
        <td>
            <div class="progress" style="height: 10px;">
                <div class="progress-bar {% if poubelle.niveauRemplissage > 90 %}bg-danger{% elseif poubelle.niveauRemplissage > 75 %}bg-warning{% else %}bg-success{% endif %}" 
                     role="progressbar" 
                     style="width: {{ poubelle.niveauRemplissage }}%;" 
                     aria-valuenow="{{ poubelle.niveauRemplissage }}" 
                     aria-valuemin="0" 
                     aria-valuemax="100"></div>
            </div>
            <small class="text-muted text-center d-block mt-1">{{ poubelle.niveauRemplissage }}%</small>
        </td>
        <td>
            <span class="badge {% if poubelle.statut == 'Fonctionnelle' %}bg-success{% elseif poubelle.statut == 'En maintenance' %}bg-warning{% else %}bg-danger{% endif %}">
                {{ poubelle.statut }}
            </span>
        </td>
        <td class="text-end">
            <div class="btn-group">
                <a href="{{ path('app_poubelle_show', {'id': poubelle.id}) }}" class="btn btn-sm btn-info">
                    <i class="fas fa-eye"></i>
                </a>
                <a href="{{ path('app_poubelle_edit', {'id': poubelle.id}) }}" class="btn btn-sm btn-primary">
                    <i class="fas fa-edit"></i>
                </a>
                <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete({{ poubelle.id }}, '{{ poubelle.type }}', '{{ poubelle.localisation }}')">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
            
            <form id="deleteForm{{ poubelle.id }}" action="{{ path('app_poubelle_delete', {'id': poubelle.id}) }}" method="post" style="display: none;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poubelle.id) }}">
            </form>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="6" class="text-center">Aucune poubelle trouv√©e</td>
    </tr>
{% endfor %} 