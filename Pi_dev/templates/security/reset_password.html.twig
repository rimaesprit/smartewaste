{% extends 'FrontBase.html.twig' %}

{% block title %}Réinitialiser votre mot de passe - SmartWaste{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-5 justify-content-center">
        <div class="col-lg-5 col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="font-weight-bold text-primary">Définir un nouveau mot de passe</h2>
                        <p class="text-muted">Choisissez un nouveau mot de passe pour votre compte</p>
                    </div>

                    {% for flash_error in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ flash_error }}
                        </div>
                    {% endfor %}
                    
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(resetForm, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_label(resetForm.plainPassword.first) }}
                            {{ form_widget(resetForm.plainPassword.first) }}
                            <small class="form-text text-muted">
                                {{ form_help(resetForm.plainPassword.first) }}
                            </small>
                            <div class="invalid-feedback">
                                {{ form_errors(resetForm.plainPassword.first) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(resetForm.plainPassword.second) }}
                            {{ form_widget(resetForm.plainPassword.second) }}
                            <div class="invalid-feedback">
                                {{ form_errors(resetForm.plainPassword.second) }}
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-primary btn-lg">Réinitialiser le mot de passe</button>
                        </div>
                        
                        <div class="text-center mt-3">
                            <a href="{{ path('app_login') }}" class="text-muted">Retour à la connexion</a>
                        </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 