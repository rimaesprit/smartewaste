{% extends 'FrontBase.html.twig' %}

{% block title %}Détails de la Réclamation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <style>
        #map-container {
            height: 400px;
            margin-top: 15px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ced4da;
        }
        .leaflet-control-attribution {
            font-size: 10px;
        }
    </style>
{% endblock %}

{% block body %}
<section class="page-section">
    <div class="container">
        <div class="section-header">
            <h2>Détails de la Réclamation</h2>
            <p>Informations complètes sur votre réclamation</p>
        </div>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Réclamation #{{ reclamation.id }}</h5>
                        {% if reclamation.etatRec == 'Pending' %}
                            <span class="badge bg-warning">En attente</span>
                        {% elseif reclamation.etatRec == 'In Progress' %}
                            <span class="badge bg-info">En cours</span>
                        {% elseif reclamation.etatRec == 'Resolved' %}
                            <span class="badge bg-success">Résolue</span>
                        {% elseif reclamation.etatRec == 'Rejected' %}
                            <span class="badge bg-danger">Rejetée</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ reclamation.etatRec }}</span>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th style="width: 30%">Type de réclamation</th>
                                    <td>{{ reclamation.typeRec }}</td>
                                </tr>
                                <tr>
                                    <th>Date de soumission</th>
                                    <td>{{ reclamation.dateRec ? reclamation.dateRec|date('d/m/Y à H:i') : 'N/A' }}</td>
                                </tr>
                                <tr>
                                    <th>Adresse concernée</th>
                                    <td>{{ reclamation.address }}</td>
                                </tr>
                                <tr>
                                    <th>Statut actuel</th>
                                    <td>
                                        {% if reclamation.etatRec == 'Pending' %}
                                            <span class="text-warning">En attente</span>
                                        {% elseif reclamation.etatRec == 'In Progress' %}
                                            <span class="text-info">En cours de traitement</span>
                                        {% elseif reclamation.etatRec == 'Resolved' %}
                                            <span class="text-success">Résolue</span>
                                        {% elseif reclamation.etatRec == 'Rejected' %}
                                            <span class="text-danger">Rejetée</span>
                                        {% else %}
                                            <span>{{ reclamation.etatRec }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% if reclamation.updatedAt %}
                                <tr>
                                    <th>Dernière mise à jour</th>
                                    <td>{{ reclamation.updatedAt|date('d/m/Y à H:i') }}</td>
                                </tr>
                                {% endif %}
                            </tbody>
                        </table>
                        
                        <div class="mt-4">
                            <h6 class="fw-bold">Description de la réclamation :</h6>
                            <div class="p-3 bg-light rounded">
                                {{ reclamation.reclamation|nl2br }}
                            </div>
                        </div>
                        
                        {% if reclamation.latitude is not null and reclamation.longitude is not null %}
                        <div class="mt-4">
                            <h6 class="fw-bold">Localisation :</h6>
                            <div id="map-container"></div>
                        </div>
                        {% endif %}
                        
                        {% if reclamation.photoName %}
                        <div class="mt-4">
                            <h6 class="fw-bold">Photo jointe :</h6>
                            <div class="mt-2">
                                <img src="{{ asset('uploads/reclamations/' ~ reclamation.photoName) }}" alt="Photo de la réclamation" class="img-fluid rounded" style="max-height: 300px;">
                            </div>
                        </div>
                        {% endif %}
                        
                        {% if reclamation.reponse %}
                        <div class="mt-4">
                            <h6 class="fw-bold">Réponse de l'administration :</h6>
                            <div class="p-3 bg-light rounded border-start border-primary border-3">
                                {{ reclamation.reponse|nl2br }}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_front_reclamation_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                    </a>
                    
                    {% if reclamation.etatRec == 'Pending' %}
                    <div>
                        <a href="{{ path('app_front_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-primary me-2">
                            <i class="bi bi-pencil me-2"></i>Modifier
                        </a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-2"></i>Supprimer
                        </button>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal de confirmation de suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer cette réclamation ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form method="post" action="{{ path('app_front_reclamation_delete', {'id': reclamation.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if reclamation.latitude is not null and reclamation.longitude is not null %}
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Récupérer les coordonnées de la réclamation
                var lat = {{ reclamation.latitude }};
                var lng = {{ reclamation.longitude }};
                var address = "{{ reclamation.address|replace({'\\': '\\\\', '"': '\\"', '\n': '\\n', '\r': '\\r', '\t': '\\t'}) }}";
                
                console.log("Initialisation de la carte avec les coordonnées:", lat, lng);
                
                // Créer la carte
                var map = L.map('map-container').setView([lat, lng], 15);
                
                // Ajouter le fond de carte OpenStreetMap
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 19,
                    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                }).addTo(map);
                
                // Ajouter un marqueur à la position de la réclamation
                var marker = L.marker([lat, lng]).addTo(map);
                
                // Ajouter une popup au marqueur avec l'adresse
                if (address) {
                    marker.bindPopup(address).openPopup();
                }
                
                // Redimensionner la carte quand elle devient visible
                setTimeout(function() {
                    map.invalidateSize();
                }, 100);
            });
        </script>
    {% endif %}
{% endblock %} 